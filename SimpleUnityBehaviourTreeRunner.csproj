<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net10.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <LangVersion>latest</LangVersion>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Newtonsoft.Json" Version="13.0.3" />
  </ItemGroup>

  <ItemGroup>
    <!-- Exclude Unity meta files from the build -->
    <Compile Remove="**/*.meta" />
    <!-- Exclude Unity-specific test files -->
    <Compile Remove="SimpleUnityBehaviourTree/Testing/**/*.cs" />
    <!-- Exclude Unity-specific sample files that use UnityEngine -->
    <Compile Remove="SimpleUnityBehaviourTree/Sample/**/*.cs" />
  </ItemGroup>

</Project>
